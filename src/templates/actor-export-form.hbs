<form class="actor-export-form">
  <div class="form-group">
    <label>Actor Folder UUID</label>
    <div class="form-fields">
      <input type="text" name="folderUuid" value="{{folderUuid}}" placeholder="Folder UUID">
      <button type="button" class="select-folder">
        <i class="fas fa-folder"></i>
      </button>
    </div>
    <p class="notes">UUID of the folder containing actors to export</p>
  </div>
  
  <div class="form-group">
    <label>Export Path</label>
    <div class="form-fields">
      <input type="text" name="exportPath" value="{{exportPath}}">
    </div>
    <p class="notes">Disk path for exported actors</p>
  </div>
  
  <div class="form-group">
    <label>Backup Limit</label>
    <div class="form-fields">
      <input type="number" name="backupLimit" value="{{backupLimit}}" min="0">
    </div>
    <p class="notes">Number of backups to keep (0 = keep all)</p>
  </div>
  
  <button type="submit" class="export-button">
    <i class="fas fa-file-export"></i> Export Actors
  </button>
</form>